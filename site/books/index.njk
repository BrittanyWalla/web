---
layout: book-list
---

<script type="text/javascript">
  // initialize Masonry after all images have loaded
  window.addEventListener('DOMContentLoaded', () => {

    Promise.all(Array.from(document.images).filter(img => !img.complete).map(img => new Promise(resolve => {
      img.onload = img.onerror = resolve;
    }))).then(() => {
      const instance = Bricks({
        container: '#books',
        packed: 'data-packed',
        sizes: [
          {
            columns: 2,
            gutter: 10
          },
          {
            mq: '768px',
            columns: 3,
            gutter: 25
          },
          {
            mq: '1024px',
            columns: 4,
            gutter: 50
          }
        ]
      }).pack()
      console.log('packed')
    });
  });
</script>

<section id="books" class="mt-15 cover-list">
  {% set bookslist = collections.books %}

  {% for book in bookslist | reverse %}
    {% if book.data.isbn %}
      <img class="grid-item" alt="{{ book.data.title }} book cover"  title="{{ book.data.title }}" src="https://covers.openlibrary.org/b/isbn/{{ book.data.isbn }}-L.jpg">
    {% else %}
      <img class="grid-item" alt="{{ book.data.title }} book cover" title="{{ book.data.title }}" src="{{ book.data.coverUrl }}">
    {% endif %}
  {% endfor %}
</section>
