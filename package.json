    "@typesafejs/eslint-config": "^0.2.5",
    "alpinejs": "^2.6.0",
    "ava": "^3.15.0",
    "browser-sync": "^2.26.14",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.21",
    "luxon": "^1.25.0",
    "markdown-it-for-inline": "^0.1.1",
    "npm-run-all": "^4.1.5",
